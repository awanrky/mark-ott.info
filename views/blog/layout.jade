!!!
html
	head
		title= 'while (this) { blog(); }'
		meta(charset='utf-8')
		link(rel='stylesheet', href='/external/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/external/bootstrap/css/bootstrap-responsive.min.css')
		link(rel='stylesheet', href='/stylesheets/blog/blog.css')
	body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container-fluid
					button.btn.btn-navbar
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.brand(href='/blog') 'while (this) { blog(); }'
					div.nav-collapse.collapse
						p.navbar-text.pull-right
					ul.nav
						li.active
							a(href='/')'While this...'
		.container-fluid
			.row-fluid
				.posts.span9
					block content
				.sidebar.span3
					.well.sidebar-nav
						ul.nav.nav-list
							li.nav-header categories
							- each cat in categoryList
								li
									a(href=categoryUrl(cat)) #{cat}
							li.nav-header tags
							- each tag in tagList
								li
									a(href=tagUrl(tag)) #{tag}
		script(src="/external/bootstrap/js/bootstrap.min.js")